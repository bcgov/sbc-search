{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "description": "Build template for the sbc-search web.",
      "tags": "Vue.js"
    },
    "name": "${NAME}-build"
  },
  "objects": [
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-${TAG_NAME}",
        "labels": {
          "app": "${NAME}-${TAG_NAME}"
        }
      },
      "spec": {
        "replicas": "${REPLICAS}",
        "test": false,
        "selector": {
          "app": "${NAME}-${TAG_NAME}",
          "deploymentconfig": "${NAME}-${TAG_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": ["${NAME}-runtime"],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${NAME}-runtime:${OUTPUT_IMAGE_TAG}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "template": {
          "metadata": {
            "labels": {
              "app": "${NAME}-${TAG_NAME}",
              "deploymentconfig": "${NAME}-${TAG_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "docker-registry.default.svc:5000/${IMAGE_NAMESPACE}/${NAME}-runtime:${OUTPUT_IMAGE_TAG}",
                "name": "${NAME}-runtime",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File"
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "schedulerName": "default-scheduler",
            "securityContext": {},
            "terminationGracePeriodSeconds": 30
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-${TAG_NAME}",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}-${TAG_NAME}"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "port": 8080,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "app": "${NAME}-${TAG_NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-${TAG_NAME}",
        "labels": {
          "app": "${NAME}-${TAG_NAME}"
        }
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "${NAME}-${TAG_NAME}",
          "weight": 100
        },
        "port": {
          "targetPort": "8080-tcp"
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what you're doing.",
      "required": true,
      "value": "search-web"
    },
    {
      "name": "TAG_NAME",
      "displayName": "Environment TAG name",
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "required": true,
      "value": "dev"
    },
    {
      "name": "APP_GROUP",
      "displayName": "App Group",
      "description": "The name assigned to all of the deployments in this project.",
      "required": true,
      "value": "sbc-search"
    },
    {
      "name": "IMAGE_NAMESPACE",
      "displayName": "Image Namespace",
      "required": true,
      "description": "The namespace of the OpenShift project containing the imagestream for the application.",
      "value": "1rdehl-tools"
    },
    {
      "name": "SOURCE_IMAGE_TAG",
      "displayName": "Source Image Tag",
      "required": true,
      "description": "The tag of the source image.",
      "value": "latest"
    },
    {
      "name": "OUTPUT_IMAGE_TAG",
      "displayName": "Output Image Tag",
      "description": "The tag given to the built image.",
      "required": true,
      "value": "latest"
    },
    {
      "name": "CPU_REQUEST",
      "displayName": "Resources CPU Request",
      "description": "The resources CPU request (in cores) for this build.",
      "required": true,
      "value": "100m"
    },
    {
      "name": "CPU_LIMIT",
      "displayName": "Resources CPU Limit",
      "description": "The resources CPU limit (in cores) for this build.",
      "required": true,
      "value": "2"
    },
    {
      "name": "MEMORY_REQUEST",
      "displayName": "Resources Memory Request",
      "description": "The resources Memory request (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "256Mi"
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Resources Memory Limit",
      "description": "The resources Memory limit (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "4Gi"
    },
    {
      "name": "REPLICAS",
      "displayName": "The number of replicas to run",
      "description": "The number of replicas to run in this environment.",
      "required": true,
      "value": "1"
    },
    {
      "name": "VUE_APP_BACKEND_HOST",
      "displayName": "Vue Backend Host",
      "description": "The hostname of the sbc-search API",
      "required": true,
      "value": "http://localhost"
    },
    {
      "name": "VUE_APP_FRONTEND_DOMAIN",
      "displayName": "Vue Frontend Domain",
      "description": "The domain of the sbc-web container",
      "required": true,
      "value": "http://localhost"
    },
    {
      "name": "VUE_APP_AUTH_ROOT_API",
      "displayName": "Authentication Root API URL",
      "description": "The root API URL of Pathfinder auth service",
      "required": true,
      "value": "https://auth-api-dev.pathfinder.gov.bc.ca/api/v1"
    }
  ]
}
