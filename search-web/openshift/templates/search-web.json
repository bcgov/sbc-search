{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "description": "Build template for the sbc-search web.",
      "tags": "Vue.js"
    },
    "name": "${NAME}-build"
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-builder"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-runtime"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-s2i-image"
      },
      "spec": {
        "tags": [
          {
            "name": "latest",
            "from": {
              "kind": "DockerImage",
              "name": "nodeshift/centos7-s2i-web-app:10.x"
            }
          }
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-image"
      },
      "spec": {
        "tags": [
          {
            "name": "latest",
            "from": {
              "kind": "DockerImage",
              "name": "centos/nginx-112-centos7:latest"
            }
          }
        ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-builder",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO_URL}",
            "ref": "${GIT_REF}"
          },
          "contextDir": "${SOURCE_CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "${SOURCE_IMAGE_KIND}",
              "name": "${NAME}-s2i-image:${SOURCE_IMAGE_TAG}"
            },
            "env": [
              {
                "name": "OUTPUT_DIR",
                "value": "dist"
              },
              {
                "name": "VUE_APP_BACKEND_HOST",
                "value": "${VUE_APP_BACKEND_HOST}"
              }
            ]
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}-builder:${OUTPUT_IMAGE_TAG}"
          }
        },
        "resources": {
          "requests": {
            "cpu": "${CPU_REQUEST}",
            "memory": "${MEMORY_REQUEST}"
          },
          "limits": {
            "cpu": "${CPU_LIMIT}",
            "memory": "${MEMORY_LIMIT}"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-image",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "source": {
          "images": [
            {
              "as": null,
              "from": {
                "kind": "${SOURCE_IMAGE_KIND}",
                "name": "${SOURCE_IMAGE_NAME}-builder:${SOURCE_IMAGE_TAG}"
              },
              "paths": [
                {
                  "destinationDir": ".",
                  "sourcePath": "/opt/app-root/output/."
                }
              ]
            }
          ],
          "type": "Image"
        },
        "strategy": {
          "sourceStrategy": {
            "from": {
              "kind": "${SOURCE_IMAGE_KIND}",
              "name": "nginx-image-runtime:latest"
            },
            "incremental": true
          },
          "type": "Source"
        },
        "output": {
          "to": {
            "kind": "${SOURCE_IMAGE_KIND}",
            "name": "${SOURCE_IMAGE_NAME}-image:${OUTPUT_IMAGE_TAG}"
          }
        },
        "resources": {
          "requests": {
            "cpu": "${CPU_REQUEST}",
            "memory": "${MEMORY_REQUEST}"
          },
          "limits": {
            "cpu": "${CPU_LIMIT}",
            "memory": "${MEMORY_LIMIT}"
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "imageChange": {
              "from": {
                "kind": "${SOURCE_IMAGE_KIND}",
                "name": "${SOURCE_IMAGE_NAME}-builder:latest"
              }
            },
            "type": "ImageChange"
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-${TAG_NAME}",
        "labels": {
          "app": "${NAME}-${TAG_NAME}"
        }
      },
      "spec": {
        "replicas": "${REPLICAS}",
        "test": false,
        "selector": {
          "app": "${NAME}-${TAG_NAME}",
          "deploymentconfig": "${NAME}-${TAG_NAME}"
        },
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": ["${NAME}-image"],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${NAME}-image:${OUTPUT_IMAGE_TAG}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "template": {
          "metadata": {
            "labels": {
              "app": "${NAME}-${TAG_NAME}",
              "deploymentconfig": "${NAME}-${TAG_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "env": [
                  {
                    "name": "KUBERNETES_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "apiVersion": "v1",
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  },
                  {
                    "name": "VUE_APP_BACKEND_HOST",
                    "value": "${VUE_APP_BACKEND_HOST}"
                  }
                ],
                "image": "${NAME}-image",
                "imagePullPolicy": "IfNotPresent",
                "name": "${NAME}-image",
                "ports": [
                  {
                    "containerPort": 8080,
                    "name": "http",
                    "protocol": "TCP"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File"
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "schedulerName": "default-scheduler",
            "securityContext": {},
            "terminationGracePeriodSeconds": 30
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-${TAG_NAME}",
        "creationTimestamp": null,
        "labels": {
          "app": "${NAME}-${TAG_NAME}"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "http",
            "port": 8080,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "app": "${NAME}-${TAG_NAME}"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-${TAG_NAME}",
        "labels": {
          "app": "${NAME}-${TAG_NAME}"
        }
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "${NAME}-image",
          "weight": 100
        },
        "port": {
          "targetPort": "8080-tcp"
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what you're doing.",
      "required": true,
      "value": "search-web"
    },
    {
      "name": "TAG_NAME",
      "displayName": "Environment TAG name",
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "required": true,
      "value": "dev"
    },
    {
      "name": "APP_GROUP",
      "displayName": "App Group",
      "description": "The name assigned to all of the deployments in this project.",
      "required": true,
      "value": "sbc-search"
    },
    {
      "name": "GIT_REPO_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to your GIT repo, don't use the this default unless your just experimenting.",
      "required": true,
      "value": "https://github.com/countable-web/sbc-search.git"
    },
    {
      "name": "GIT_REF",
      "displayName": "Git Reference",
      "description": "The git reference or branch.",
      "required": true,
      "value": "master"
    },
    {
      "name": "SOURCE_CONTEXT_DIR",
      "displayName": "Source Context Directory",
      "description": "The source context directory.",
      "required": true,
      "value": "search-web"
    },
    {
      "name": "SOURCE_IMAGE_KIND",
      "displayName": "Source Image Kind",
      "required": true,
      "description": "The 'kind' (type) of the  source image; typically ImageStreamTag, or DockerImage.",
      "value": "ImageStreamTag"
    },
    {
      "name": "SOURCE_IMAGE_NAME_SPACE",
      "displayName": "Source Image Name Space",
      "required": true,
      "description": "The name space of the source image.",
      "value": "openshift"
    },
    {
      "name": "SOURCE_IMAGE_NAME",
      "displayName": "Source Image Name",
      "required": true,
      "description": "The name of the source image.",
      "value": "search-web"
    },
    {
      "name": "SOURCE_IMAGE_TAG",
      "displayName": "Source Image Tag",
      "required": true,
      "description": "The tag of the source image.",
      "value": "latest"
    },
    {
      "name": "OUTPUT_IMAGE_TAG",
      "displayName": "Output Image Tag",
      "description": "The tag given to the built image.",
      "required": true,
      "value": "latest"
    },
    {
      "name": "CPU_REQUEST",
      "displayName": "Resources CPU Request",
      "description": "The resources CPU request (in cores) for this build.",
      "required": true,
      "value": "100m"
    },
    {
      "name": "CPU_LIMIT",
      "displayName": "Resources CPU Limit",
      "description": "The resources CPU limit (in cores) for this build.",
      "required": true,
      "value": "2"
    },
    {
      "name": "MEMORY_REQUEST",
      "displayName": "Resources Memory Request",
      "description": "The resources Memory request (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "256Mi"
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Resources Memory Limit",
      "description": "The resources Memory limit (in Mi, Gi, etc) for this build.",
      "required": true,
      "value": "4Gi"
    },
    {
      "name": "REPLICAS",
      "displayName": "The number of replicas to run",
      "description": "The number of replicas to run in this environment.",
      "required": true,
      "value": "1"
    },
    {
      "name": "VUE_APP_BACKEND_HOST",
      "displayName": "Vue Backend Host",
      "description": "The hostname of the sbc-search API",
      "required": true,
      "value": "http://localhost"
    }
  ]
}
